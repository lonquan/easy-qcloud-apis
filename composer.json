{
    "name": "lonquan/easy-qcloud-apis",
    "description": "腾讯云 API Laravel 客户端包，提供统一的配置管理、V3 签名、HTTP 请求和日志记录功能",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "qcloud",
        "tencent",
        "api",
        "ocr",
        "faceid",
        "captcha"
    ],
    "authors": [
        {
            "name": "Lonquan",
            "email": "lonquan@example.com"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "illuminate/support": "^12.0",
        "illuminate/http": "^12.0",
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.0"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "check-style": "./vendor/bin/pint --test --ansi",
        "fix-style": "./vendor/bin/pint --ansi",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=256M",
        "check": [
            "@check-style",
            "@phpstan",
            "@test"
        ],
        "fix": [
            "@fix-style"
        ]
    },
    
    "autoload": {
        "psr-4": {
            "EasyQCloudApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EasyQCloudApi\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "EasyQCloudApi\\ServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
